{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TokenScript DSL",
  "scopeName": "source.tokenscript",
  "fileTypes": ["tokenscript"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#scale-parameters"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tokenscript",
          "match": "//.*$"
        },
        {
          "name": "comment.block.tokenscript",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.directive.tokenscript",
          "match": "/numberScale\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "entity.name.type.tokenscript",
          "match": "\\b(modular|linear)\\b"
        },
        {
          "name": "storage.type.tokenscript",
          "match": "\\b(number|string|boolean|color|array)\\b"
        }
      ]
    },
    "scale-parameters": {
      "patterns": [
        {
          "name": "variable.parameter.tokenscript",
          "match": "^\\s{4,}(base|ratio|increment|peak|steps|round)(?=\\s*[=:])"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.reference.tokenscript",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z0-9_]+)*"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tokenscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tokenscript",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.other.color.hex.tokenscript",
          "match": "#[0-9a-fA-F]{3,8}\\b"
        },
        {
          "name": "constant.numeric.tokenscript",
          "match": "\\b\\d+(\\.\\d+)?(px|rem|em|%)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.tokenscript",
          "match": "[=:]"
        }
      ]
    }
  }
}
